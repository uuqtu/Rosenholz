<Window x:Class="ImgurSniper.UI.HotKeySelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImgurSniper.UI"
        xmlns:cultureStrings="clr-namespace:ImgurSniper.UI.Properties"
        mc:Ignorable="d" WindowStyle="None" ResizeMode="NoResize" Background="Gray" WindowStartupLocation="CenterOwner"
        Title="HotKeySelector" Height="150" Width="270"
        KeyDown="SelectKey">
    <Grid>
        <Label Content="{x:Static Member=cultureStrings:strings.pressKey}" HorizontalAlignment="Center"
               VerticalAlignment="Center" />
    </Grid>
</Window>