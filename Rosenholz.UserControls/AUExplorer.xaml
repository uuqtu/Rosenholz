<UserControl x:Class="Rosenholz.UserControls.AUExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rosenholz.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />

                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <TreeView Grid.Row="0" Grid.Column="0" Name="AuReferenceGridView" ItemsSource="{Binding }" Background="AliceBlue"></TreeView>
            <local:ButtonPanel Grid.Row="0" Grid.Column="1"></local:ButtonPanel>
            <local:TextEditor Grid.Row="0" Grid.Column="2"></local:TextEditor>
            <!--https://wpf-tutorial.com/rich-text-controls/how-to-creating-a-rich-text-editor/-->
        </Grid>
    </Grid>
</UserControl>
