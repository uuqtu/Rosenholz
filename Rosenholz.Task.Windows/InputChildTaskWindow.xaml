<Window x:Class="Rosenholz.Task.Windows.InputChildTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:uc="clr-namespace:Rosenholz.Task.UserControls;assembly=Rosenholz.Task.UserControls"
        xmlns:local="clr-namespace:Rosenholz.Task.Windows"
        mc:Ignorable="d"
        x:Name="InputChildTaskEntryWindow"
        Title="InputChildTaskEntryWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <uc:ReducedTaskEntryUserControl Loaded="TaskEntryUserControl_Loaded" Grid.Row="0" Grid.ColumnSpan="2"></uc:ReducedTaskEntryUserControl>
            <Button Background="#1C1C1C" Foreground="White" Grid.Column="1" Grid.Row="1" Margin="5,5,5,5" Command="{Binding AddTaskEntryCommand, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                              CommandParameter="{Binding ElementName=InputChildTaskEntryWindow}">Speichern</Button>
        </Grid>
    </Grid>
</Window>
